{
	"name": "senior-project-dev",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"mounts": [
		"source=dev-idf-cache,target=/opt/idf-cache,type=volume",
		"source=dev-ccache,target=/root/.ccache,type=volume"
	],

	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash",
				"idf.espIdfPath": "/opt/esp-idf",
				"idf.toolsPath": "/root/.espressif",
				"idf.gitPath": "/usr/bin/git",
				"idf.pythonBinPath": "/usr/bin/python3",
				"idf.adapterTargetName": "esp32s3",
				"idf.usePowerShell": false
			},
			"idf.customExtraPaths": [
          		"/root/.espressif/tools/ninja/*",
          		"/root/.espressif/tools/xtensa-esp-elf/*/bin",
          		"/root/.espressif/tools/xtensa-esp32s3-elf/*/bin",
          		"/root/.espressif/tools/riscv32-esp-elf/*/bin",
          		"/root/.espressif/python_env/idf*/*/bin"
        	],
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.cmake-tools",
				"editorconfig.editorconfig",
				"espressif.esp-idf-extension",
				"espressif.esp-idf-web"
			]
		}
	},
	"runArgs": ["--privileged"],

	"remoteEnv": {
    "IDF_PATH": "/opt/esp-idf",
    "IDF_TOOLS_PATH": "/root/.espressif"
  },
  "postCreateCommand": "bash -lc 'git -C /opt/esp-idf submodule update --init --recursive; . /opt/esp-idf/export.sh; idf.py --version || true; tools/bootstrap_idf_projects.sh || true'",
  "postAttachCommand": "bash -lc 'source /opt/esp-idf/export.sh && cd software/firmware/master && rm -rf build && idf.py set-target esp32s3 reconfigure && cd ../sensor && rm -rf build && idf.py set-target esp32s3 reconfigure'"
}